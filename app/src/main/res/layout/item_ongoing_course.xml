<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dip"
        android:weightSum="10"
        android:elevation="5dip"
        android:background="@color/white"
        >  <android.support.v4.widget.Space
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sea Horse"
            android:singleLine="true"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/dialog_messagecolor" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="10dip"
        android:background="@color/white"
        >



        <android.support.v4.widget.Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="change"
            android:gravity="center"
            android:id="@+id/tv_change"
            android:textColor="@color/white"
            android:background="@drawable/white_blue_stroke_btn_selector"
            />
        <android.support.v4.widget.Space
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="attdendance"
            android:gravity="center"
            android:id="@+id/tv_attendance"
            android:textColor="@color/white"
            android:background="@drawable/white_blue_stroke_btn_selector"
            />

        <android.support.v4.widget.Space
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:padding="5dip"
            android:text="finish"
            android:gravity="center"
            android:id="@+id/tv_finish"
            android:textColor="@color/white"
            android:background="@drawable/white_blue_stroke_btn_selector"
            />

        <android.support.v4.widget.Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>